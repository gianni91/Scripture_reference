<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Book" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book_input"
        android:text="Alma"
        android:layout_alignTop="@+id/bookLabel"
        android:layout_alignLeft="@+id/chapter_input"
        android:layout_alignStart="@+id/chapter_input" />

    <!--
    android:layout_alignTop="@+id/bookLabel"
    android:layout_alignStart="@+id/chapter_input"
    android:layout_alignRight="@+id/chapter_input"
    android:layout_alignEnd="@+id/chapter_input"
    -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verse"
        android:id="@+id/textView2"
        android:layout_below="@+id/chapterLabel"
        android:layout_alignLeft="@+id/chapterLabel"
        android:layout_alignStart="@+id/chapterLabel"
        android:layout_marginTop="65dp" />

    <TextView
        android:text="Chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chapterLabel"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/bookLabel"
        android:layout_alignLeft="@+id/bookLabel"
        android:layout_alignStart="@+id/bookLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chapter_input"
        android:text="1"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_alignTop="@+id/chapterLabel"
        android:layout_toRightOf="@+id/chapterLabel"
        android:layout_toEndOf="@+id/chapterLabel" />

    <!--
            android:layout_alignTop="@+id/chapterLabel"
        android:layout_toRightOf="@+id/chapterLabel"
        android:layout_toLeftOf="@+id/share_button"
        android:layout_toStartOf="@+id/share_button"
    -->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verse_input"
        android:text="1"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/book_input"
        android:layout_alignStart="@+id/book_input" />
<!--
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/chapter_input"
        android:layout_alignStart="@+id/chapter_input"
        android:layout_alignRight="@+id/book_input"
        android:layout_alignEnd="@+id/book_input"
-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:id="@+id/share_button"
        android:onClick="shareButtonHandler"
        android:layout_below="@+id/verse_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

</RelativeLayout>
